// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id    Int     @id @default(autoincrement())
  name  String
  image String
  products Product[]
}

model Extra {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  imageUrl    String
   products Product[]
}

model Product {
  id           Int      @id @default(autoincrement())
  name         String
  code         Int
  imageUrl    String
  categoryId   Int
  ingredients  String
  price        Float
  extras       Extra[]
  category     Category @relation(fields: [categoryId], references: [id])
}